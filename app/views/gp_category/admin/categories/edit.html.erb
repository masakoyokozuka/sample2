<%= form_for @item, as: :item, url: { action: :update,
                                      content: @content,
                                      category_type_id: @category_type.id,
                                      category_id: @parent_category.try(:id).to_i,
                                      id: @item.id },
                               html: { method: :put } do |f| %>
  <%= error_messages_for :item %>
  <%= render 'form', f: f %>
  <%= submit :update %>
<% end %>
