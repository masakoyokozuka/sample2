<%= form_for @item, as: :item, url: { action: :create,
                                      content: @content,
                                      category_type_id: @category_type.id,
                                      category_id: @parent_category.try(:id).to_i } do |f| %>
  <%= error_messages_for :item %>
  <%= render 'form', f: f %>
  <%= submit :create %>
<% end %>
