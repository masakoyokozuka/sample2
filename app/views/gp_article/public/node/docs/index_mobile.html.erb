<div class="contentGpArticleDocs">
  <div class="docs">
    <%- if @docs.present? && @content.monthly_pagination? -%><div class="h2 date"><%= monthly_title(@dates, @content.doc_monthly_style) %></div><%- end -%>
    <%- if @docs.present? && @content.weekly_pagination? -%><div class="h2 date"><%= weekly_title(@dates, @content.date_style) %></div><%- end -%>
    <% @items.each do |date, docs| %>
      <%- if @content.doc_list_style == 'by_date' && @content.simple_pagination?%>
      <div class="h2 date"><%= date %></div>
      <% end %>
      <%- docs.each do |doc| -%>
      <div class="doc">ãƒ»<%= doc_replace(doc, @content.list_style, @content.date_style, @content.time_style) %></div>
      <%- end -%>
    <%- end -%>
  </div>
  <%- if @content.simple_pagination? -%>
  <%= paginate @docs, {prev_label: @content.prev_label, next_label: @content.next_label} %>
  <%- else -%>
  <%= period_pagination @prev_doc, @next_doc, Page.current_node, {prev_label: @content.prev_label, next_label: @content.next_label} if @docs.present?%>
  <%- end -%>
</div>
