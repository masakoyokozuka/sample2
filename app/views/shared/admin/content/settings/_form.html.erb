<%= f.hidden_field :content_id -%>

<table class="show">
  <tr>
    <th>設定名</th>
    <td><%= item.config_name %></td>
  </tr>
  <tr>
    <th>設定値</th>
    <td>
      <div style="margin: 5px; line-height: 1.2;"><%=raw item.upper_text %></div>
      <%= value_form(f, item.config[:style]) %>
      <span style="margin-left: 10px;"><%=raw item.config[:comment] %></span>
      <div style="margin: 5px; line-height: 1.2;"><%=raw item.lower_text %></div>
    </td>
  </tr>
</table>
