<%= render 'shared/admin/piece/show' do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= @item.locale :docs_filter %></th>
    <td><%= @item.class::DOCS_FILTER_OPTIONS.rassoc(@item.setting_value(:docs_filter)).try(:first) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :docs_order %></th>
    <td><%= @item.class::DOCS_ORDER_OPTIONS.rassoc(@item.setting_value(:docs_order))
    .try(:first) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :doc_style %></th>
    <td><%=simple_format @item.setting_value(:doc_style) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :date_style %></th>
    <td><%= @item.setting_value(:date_style) %></td>
  </tr>
  <tr>
    <th><%= @item.locale :docs_number %></th>
    <td><%= @item.setting_value(:docs_number) %></td>
  </tr>
</table>
<%- end -%>
