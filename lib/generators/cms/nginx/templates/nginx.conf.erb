<%- zomeki_root = Rails.root -%>
types {
  text/html r;
}

upstream zomeki_puma {
  server unix://<%= zomeki_root %>/tmp/sockets/puma.sock;
}

upstream zomeki_unicorn {
  server unix://<%= zomeki_root %>/tmp/sockets/unicorn.sock;
}

include <%= zomeki_root %>/config/nginx/servers/*.conf;
include <%= zomeki_root %>/config/nginx/admin_servers/*.conf;
