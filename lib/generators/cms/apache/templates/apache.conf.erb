<%- zomeki_root = Rails.root -%>
NameVirtualHost *:80

<Directory <%= zomeki_root %>/sites>
    AllowOverride All
    RewriteEngine on
    PassengerEnabled on
    PassengerAppRoot <%= zomeki_root %>
    setenv LANG ja_JP.UTF-8
</Directory>

Include <%= zomeki_root %>/config/apache/virtual_hosts/*.conf
